<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scene_root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/main_bg"/>
            <ImageView
                android:layout_marginTop="76dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/circle_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/logo" />
            <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/intro_description"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.prototype.wishti.custom_views.TextViewWithFont
                    android:id="@+id/title_logo"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    custom:ttf_file="Roboto-Medium.ttf"
                    android:text="Welcome" />
                <View
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="42dp"
                    android:layout_height="2dp"
                    android:background="@android:color/white"/>
                <com.prototype.wishti.custom_views.TextViewWithFont
                    android:gravity="center"
                    android:layout_width="208dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    custom:ttf_file="Roboto-Light.ttf"
                    android:text="Wishti is a free app to find specialists and schadule your appointments instantly." />
            </LinearLayout>
    </RelativeLayout>
    <com.prototype.wishti.custom_views.TextViewWithFont
        android:clickable="true"
        android:id="@+id/get_started_button"
        android:layout_width="match_parent"
        android:background="@color/blue"
        android:textColor="@android:color/white"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="20sp"
        android:onClick="click_button"
        android:text="Get started"
        custom:ttf_file="Roboto-Light.ttf"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>